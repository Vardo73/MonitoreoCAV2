<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Promedio Diario PM 2.5 y PM 10</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
        table {
            margin: auto; 
            text-align:center; 
            border-collapse: collapse;
            table-layout: auto;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <!--ENCABEZADO-->
        <div class="row ">
            <hr/>
                <h2 style="text-align: center;"><span style="color: #2aa5d6;">Reporte de concentraciones</span></h2>
                <h4 style=" opacity: 0.5; text-align: center;" id="lblData">{{day}}</h4>
            <hr/>
            
        </div>
        <br>

        <!--TABLA-->
        <div class="row ">
            <div class="col" >
                <table class="table table-bordered" >
                    <thead style="background: #BFBFBF">
                        <tr>
                            <th>Estaci√≥n</th>
                            <th>PM 2.5 &#956;g/m<sup>3</sup></th>
                            <th>PM 10 &#956;g/m<sup>3</sup></th>
                            <th>Datos (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @each(dat in averages)
                        <tr>
                            <th id="thRepDiaHora"> {{dat.name}}</th>

                            @if(dat.average_pm2>=1000)
                            <th id="thRepDiaPromedioH2" style="color: #FF0F00;">{{dat.average_pm2}}</th>
                            @else
                            <th id="thRepDiaPromedioH2">{{dat.average_pm2}}</th>
                            @endif

                            @if(dat.average_pm10>=1000)
                            <th id="thRepDiaPromedioH10" style="color: #FF0F00; "> {{dat.average_pm10}}</th>
                            @else
                            <th id="thRepDiaPromedioH10"> {{dat.average_pm10}}</th>
                            @endif
                            
                            <th id="thRepDiaHora"> {{dat.percentage}}</th>
                        </tr>
                        @endeach
                    </tbody>
                </table>
             </div>
        </div>

        <br>
    </div>
    <!--Bootstrap Bundle-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
</body>
</html>