<script>
    let idCont=0;

    function notificationSwal(message,type){
        Swal.fire({
            text:message,
            icon: type,
            timer:1000,
            timerProgressBar: true
        }).then((result)=>{
            location.reload();
        });
    }
    function requestAxios(url,method,data){
        axios({
            url:url,
            method:method,
            data:data
        })
        .then(response=>{
            console.log(response.data)
            this.notificationSwal(response.data,'success')
        })
        .catch(error=>{
            console.log(error)
            this.notificationSwal(error,'error')
        })
    }

    function deletePollutant(id){
        if(id!=0){
            Swal.fire({
                title: 'Est치 seguro de eliminar este elemento?',
                showCancelButton: true,
                confirmButtonText: `Eliminar`,
                denyButtonText: `Cancelar`,
            }).then((result)=>{
                if (result.isConfirmed){
                    let url='pollutant/delete'
                    let method='POST'
                    let dat={
                        id:id
                    }
                    this.requestAxios(url,method,dat)
                }
            })
        }
    }

    function showPollutant(id,name,description){
        idCont=id;
        document.getElementById('txtNamePollutantEdit').value=name
        document.getElementById('txtDescriptionPollutantEdit').value=description
    }

    document.getElementById('formEditPullatant')
    .addEventListener('submit',e =>{
        e.preventDefault()

        let url='/pollutant/edit'
        let method='POST'
        let dat={
            id:idCont,
            name:document.getElementById('txtNamePollutantEdit').value.trim(),
            description:document.getElementById('txtDescriptionPollutantEdit').value.trim()
        }
        //alert(JSON.stringify(dat))
        this.requestAxios(url,method,dat)
    })
</script>
